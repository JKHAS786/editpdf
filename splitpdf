    <script>
        // Global variables
        let pdfDoc = null;
        let selectedPages = new Set();
        let totalPages = 0;
        let pdfName = '';
        let qualitySettings = {
            quality: 'enhanced',
            sharpening: true,
            noiseReduction: false,
            contrastEnhancement: true,
            dpi: 300,
            compression: 'none'
        };
        
        // DOM elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const pageCount = document.getElementById('pageCount');
        const progress = document.getElementById('progress');
        const resetBtn = document.getElementById('resetBtn');
        const qualityCard = document.getElementById('qualityCard');
        const dpiSlider = document.getElementById('dpiSlider');
        const dpiValue = document.getElementById('dpiValue');
        const previewBtn = document.getElementById('previewBtn');
        const applyQualityBtn = document.getElementById('applyQualityBtn');
        const previewContainer = document.getElementById('previewContainer');
        const originalPreview = document.getElementById('originalPreview');
        const enhancedPreview = document.getElementById('enhancedPreview');
        const selectionCard = document.getElementById('selectionCard');
        const pagesContainer = document.getElementById('pagesContainer');
        const selectAllBtn = document.getElementById('selectAllBtn');
        const deselectAllBtn = document.getElementById('deselectAllBtn');
        const selectOddBtn = document.getElementById('selectOddBtn');
        const selectEvenBtn = document.getElementById('selectEvenBtn');
        const splitSelectedBtn = document.getElementById('splitSelectedBtn');
        const splitAllBtn = document.getElementById('splitAllBtn');
        const downloadCard = document.getElementById('downloadCard');
        const downloadLinks = document.getElementById('downloadLinks');
        const downloadZipBtn = document.getElementById('downloadZipBtn');
        const newSplitBtn = document.getElementById('newSplitBtn');
        
        // Event listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('highlight');
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('highlight');
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('highlight');
            if (e.dataTransfer.files.length) {
                handleFile(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFile(e.target.files[0]);
            }
        });
        
        resetBtn.addEventListener('click', resetApp);
        dpiSlider.addEventListener('input', updateDpiValue);
        previewBtn.addEventListener('click', showQualityPreview);
        applyQualityBtn.addEventListener('click', applyQualitySettings);
        selectAllBtn.addEventListener('click', selectAllPages);
        deselectAllBtn.addEventListener('click', deselectAllPages);
        selectOddBtn.addEventListener('click', selectOddPages);
        selectEvenBtn.addEventListener('click', selectEvenPages);
        splitSelectedBtn.addEventListener('click', splitSelectedPages);
        splitAllBtn.addEventListener('click', splitAllPages);
        downloadZipBtn.addEventListener('click', downloadAsZip);
        newSplitBtn.addEventListener('click', resetApp);
        
        // Functions
        function handleFile(file) {
            if (file.type !== 'application/pdf') {
                alert('Please upload a PDF file.');
                return;
            }
            
            pdfName = file.name.replace('.pdf', '');
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            
            const fileReader = new FileReader();
            
            fileReader.onload = function() {
                const typedarray = new Uint8Array(this.result);
                
                // Initialize PDF.js
                pdfjsLib.getDocument(typedarray).promise.then(function(pdf) {
                    pdfDoc = pdf;
                    totalPages = pdf.numPages;
                    pageCount.textContent = totalPages;
                    
                    fileInfo.classList.remove('hidden');
                    resetBtn.classList.remove('hidden');
                    qualityCard.classList.remove('hidden');
                    
                    // Update progress
                    progress.style.width = '100%';
                }).catch(function(error) {
                    console.error('Error loading PDF:', error);
                    alert('Error loading PDF. Please try another file.');
                });
            };
            
            fileReader.readAsArrayBuffer(file);
        }
        
        function updateDpiValue() {
            dpiValue.textContent = dpiSlider.value;
            qualitySettings.dpi = parseInt(dpiSlider.value);
        }
        
        function showQualityPreview() {
            if (!pdfDoc) return;
            
            previewBtn.innerHTML = '<div class="loading"></div> Generating Preview...';
            previewBtn.disabled = true;
            
            // Get first page for preview
            pdfDoc.getPage(1).then(function(page) {
                const viewport = page.getViewport({ scale: 1.5 });
                
                // Original preview
                const originalCanvas = originalPreview;
                const originalContext = originalCanvas.getContext('2d');
                originalCanvas.height = viewport.height;
                originalCanvas.width = viewport.width;
                
                // Enhanced preview
                const enhancedCanvas = enhancedPreview;
                const enhancedContext = enhancedCanvas.getContext('2d');
                enhancedCanvas.height = viewport.height;
                enhancedCanvas.width = viewport.width;
                
                // Render original
                const renderContext = {
                    canvasContext: originalContext,
                    viewport: viewport
                };
                
                page.render(renderContext).promise.then(function() {
                    // Apply enhancements to the enhanced preview
                    applyImageEnhancements(originalCanvas, enhancedCanvas);
                    
                    previewContainer.classList.remove('hidden');
                    previewBtn.innerHTML = 'Preview Quality';
                    previewBtn.disabled = false;
                });
            });
        }
        
        function applyImageEnhancements(sourceCanvas, targetCanvas) {
            const srcContext = sourceCanvas.getContext('2d');
            const dstContext = targetCanvas.getContext('2d');
            
            // Copy source to destination
            dstContext.drawImage(sourceCanvas, 0, 0);
            
            // Get image data
            const imageData = dstContext.getImageData(0, 0, targetCanvas.width, targetCanvas.height);
            const data = imageData.data;
            
            // Apply sharpening if enabled
            if (qualitySettings.sharpening) {
                applySharpening(data, targetCanvas.width, targetCanvas.height);
            }
            
            // Apply contrast enhancement if enabled
            if (qualitySettings.contrastEnhancement) {
                applyContrastEnhancement(data);
            }
            
            // Apply noise reduction if enabled
            if (qualitySettings.noiseReduction) {
                applyNoiseReduction(data, targetCanvas.width, targetCanvas.height);
            }
            
            // Put enhanced image data back
            dstContext.putImageData(imageData, 0, 0);
        }
        
        function applySharpening(data, width, height) {
            // Simple sharpening kernel
            const kernel = [
                0, -1, 0,
                -1, 5, -1,
                0, -1, 0
            ];
            
            applyConvolutionFilter(data, width, height, kernel);
        }
        
        function applyNoiseReduction(data, width, height) {
            // Simple median filter for noise reduction
            for (let y = 1; y < height - 1; y++) {
                for (let x = 1; x < width - 1; x++) {
                    const idx = (y * width + x) * 4;
                    
                    // Get surrounding pixels
                    const r = [], g = [], b = [];
                    for (let ky = -1; ky <= 1; ky++) {
                        for (let kx = -1; kx <= 1; kx++) {
                            const kidx = ((y + ky) * width + (x + kx)) * 4;
                            r.push(data[kidx]);
                            g.push(data[kidx + 1]);
                            b.push(data[kidx + 2]);
                        }
                    }
                    
                    // Sort and take median
                    r.sort((a, b) => a - b);
                    g.sort((a, b) => a - b);
                    b.sort((a, b) => a - b);
                    
                    data[idx] = r[4];     // Median of 9 values
                    data[idx + 1] = g[4];
                    data[idx + 2] = b[4];
                }
            }
        }
        
        function applyContrastEnhancement(data) {
            // Simple contrast enhancement
            const factor = 1.2; // Increase contrast by 20%
            
            for (let i = 0; i < data.length; i += 4) {
                data[i] = clamp(data[i] * factor, 0, 255);         // R
                data[i + 1] = clamp(data[i + 1] * factor, 0, 255); // G
                data[i + 2] = clamp(data[i + 2] * factor, 0, 255); // B
            }
        }
        
        function applyConvolutionFilter(data, width, height, kernel) {
            const tempData = new Uint8ClampedArray(data);
            
            for (let y = 1; y < height - 1; y++) {
                for (let x = 1; x < width - 1; x++) {
                    let r = 0, g = 0, b = 0;
                    
                    for (let ky = -1; ky <= 1; ky++) {
                        for (let kx = -1; kx <= 1; kx++) {
                            const kidx = ((y + ky) * width + (x + kx)) * 4;
                            const kval = kernel[(ky + 1) * 3 + (kx + 1)];
                            
                            r += tempData[kidx] * kval;
                            g += tempData[kidx + 1] * kval;
                            b += tempData[kidx + 2] * kval;
                        }
                    }
                    
                    const idx = (y * width + x) * 4;
                    data[idx] = clamp(r, 0, 255);
                    data[idx + 1] = clamp(g, 0, 255);
                    data[idx + 2] = clamp(b, 0, 255);
                }
            }
        }
        
        function clamp(value, min, max) {
            return Math.min(Math.max(value, min), max);
        }
        
        function applyQualitySettings() {
            // Update quality settings from form
            qualitySettings.quality = document.querySelector('input[name="quality"]:checked').value;
            qualitySettings.sharpening = document.getElementById('sharpening').checked;
            qualitySettings.noiseReduction = document.getElementById('noiseReduction').checked;
            qualitySettings.contrastEnhancement = document.getElementById('contrastEnhancement').checked;
            qualitySettings.compression = document.querySelector('input[name="compression"]:checked').value;
            
            // Show selection card
            qualityCard.classList.add('hidden');
            selectionCard.classList.remove('hidden');
            
            renderPageThumbnails();
        }
        
        function renderPageThumbnails() {
            pagesContainer.innerHTML = '';
            selectedPages.clear();
            
            for (let i = 1; i <= totalPages; i++) {
                const pageThumbnail = document.createElement('div');
                pageThumbnail.className = 'page-thumbnail';
                pageThumbnail.dataset.pageNumber = i;
                
                const canvasContainer = document.createElement('div');
                canvasContainer.className = 'canvas-container';
                
                const pageNumber = document.createElement('div');
                pageNumber.className = 'page-number';
                pageNumber.textContent = `Page ${i}`;
                
                pageThumbnail.appendChild(canvasContainer);
                pageThumbnail.appendChild(pageNumber);
                
                pageThumbnail.addEventListener('click', () => togglePageSelection(i, pageThumbnail));
                
                pagesContainer.appendChild(pageThumbnail);
                
                // Render thumbnail
                renderThumbnail(i, canvasContainer);
            }
            
            updateSplitButtonState();
        }
        
        function renderThumbnail(pageNumber, container) {
            pdfDoc.getPage(pageNumber).then(function(page) {
                const viewport = page.getViewport({ scale: 0.2 });
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.height = viewport.height;
                canvas.width = viewport.width;
                
                container.appendChild(canvas);
                
                const renderContext = {
                    canvasContext: context,
                    viewport: viewport
                };
                
                page.render(renderContext);
            });
        }
        
        function togglePageSelection(pageNumber, element) {
            if (selectedPages.has(pageNumber)) {
                selectedPages.delete(pageNumber);
                element.classList.remove('selected');
            } else {
                selectedPages.add(pageNumber);
                element.classList.add('selected');
            }
            
            updateSplitButtonState();
        }
        
        function selectAllPages() {
            selectedPages.clear();
            const thumbnails = document.querySelectorAll('.page-thumbnail');
            
            for (let i = 1; i <= totalPages; i++) {
                selectedPages.add(i);
                thumbnails[i-1].classList.add('selected');
            }
            
            updateSplitButtonState();
        }
        
        function deselectAllPages() {
            selectedPages.clear();
            const thumbnails = document.querySelectorAll('.page-thumbnail');
            
            thumbnails.forEach(thumb => {
                thumb.classList.remove('selected');
            });
            
            updateSplitButtonState();
        }
        
        function selectOddPages() {
            selectedPages.clear();
            const thumbnails = document.querySelectorAll('.page-thumbnail');
            
            for (let i = 1; i <= totalPages; i++) {
                if (i % 2 !== 0) {
                    selectedPages.add(i);
                    thumbnails[i-1].classList.add('selected');
                } else {
                    thumbnails[i-1].classList.remove('selected');
                }
            }
            
            updateSplitButtonState();
        }
        
        function selectEvenPages() {
            selectedPages.clear();
            const thumbnails = document.querySelectorAll('.page-thumbnail');
            
            for (let i = 1; i <= totalPages; i++) {
                if (i % 2 === 0) {
                    selectedPages.add(i);
                    thumbnails[i-1].classList.add('selected');
                } else {
                    thumbnails[i-1].classList.remove('selected');
                }
            }
            
            updateSplitButtonState();
        }
        
        function updateSplitButtonState() {
            splitSelectedBtn.disabled = selectedPages.size === 0;
        }
        
        async function splitSelectedPages() {
            if (selectedPages.size === 0) return;
            
            splitSelectedBtn.innerHTML = '<div class="loading"></div> Processing...';
            splitSelectedBtn.disabled = true;
            
            try {
                const pdfBytes = await extractSelectedPages();
                showDownloadOptions(pdfBytes, Array.from(selectedPages));
            } catch (error) {
                console.error('Error splitting PDF:', error);
                alert('Error splitting PDF. Please try again.');
            } finally {
                splitSelectedBtn.innerHTML = 'Split Selected Pages';
                splitSelectedBtn.disabled = false;
            }
        }
        
        async function splitAllPages() {
            splitAllBtn.innerHTML = '<div class="loading"></div> Processing...';
            splitAllBtn.disabled = true;
            
            try {
                const allPages = Array.from({length: totalPages}, (_, i) => i + 1);
                const pdfBytes = await extractSelectedPages(allPages);
                showDownloadOptions(pdfBytes, allPages);
            } catch (error) {
                console.error('Error splitting PDF:', error);
                alert('Error splitting PDF. Please try again.');
            } finally {
                splitAllBtn.innerHTML = 'Split All Pages (Individual)';
                splitAllBtn.disabled = false;
            }
        }
        
        async function extractSelectedPages(pages = null) {
            const pagesToExtract = pages || Array.from(selectedPages);
            const { PDFDocument } = PDFLib;
            
            // Create a new PDF document
            const newPdfDoc = await PDFDocument.create();
            
            // Copy selected pages from the original PDF with quality enhancements
            for (const pageNum of pagesToExtract) {
                // Get the page
                const page = await pdfDoc.getPage(pageNum);
                
                // Calculate scale based on DPI setting
                const scale = qualitySettings.dpi / 72; // 72 is standard PDF DPI
                const viewport = page.getViewport({ scale: scale });
                
                // Create a canvas to render the page
                const canvas = document.createElement('canvas');
                const context = canvas.getContext('2d');
                canvas.height = viewport.height;
                canvas.width = viewport.width;
                
                await page.render({
                    canvasContext: context,
                    viewport: viewport
                }).promise;
                
                // Apply image enhancements if enabled
                if (qualitySettings.quality !== 'original') {
                    applyImageEnhancements(canvas, canvas);
                }
                
                // Convert canvas to image and embed in new PDF
                let imageData, image;
                
                // Adjust quality based on compression setting
                let quality = 1.0; // Maximum quality
                if (qualitySettings.compression === 'medium') {
                    quality = 0.8;
                } else if (qualitySettings.compression === 'high') {
                    quality = 0.6;
                }
                
                if (quality < 1.0) {
                    // Use JPEG for compression
                    imageData = canvas.toDataURL('image/jpeg', quality);
                    image = await newPdfDoc.embedJpg(imageData);
                } else {
                    // Use PNG for lossless quality
                    imageData = canvas.toDataURL('image/png');
                    image = await newPdfDoc.embedPng(imageData);
                }
                
                const imageDims = image.scale(1);
                
                const newPage = newPdfDoc.addPage([imageDims.width, imageDims.height]);
                newPage.drawImage(image, {
                    x: 0,
                    y: 0,
                    width: imageDims.width,
                    height: imageDims.height,
                });
            }
            
            // Save the new PDF
            const pdfBytes = await newPdfDoc.save();
            return pdfBytes;
        }
        
        function showDownloadOptions(pdfBytes, pages) {
            selectionCard.classList.add('hidden');
            downloadCard.classList.remove('hidden');
            downloadLinks.innerHTML = '';
            
            // Create download links for each page
            if (pages.length > 1) {
                // For multiple pages, create a single download for all selected
                const blob = new Blob([pdfBytes], { type: 'application/pdf' });
                const url = URL.createObjectURL(blob);
                
                const link = document.createElement('a');
                link.href = url;
                link.download = `${pdfName}_pages_${pages.join('_')}_enhanced.pdf`;
                link.className = 'btn';
                link.textContent = `Download Enhanced PDF (${pages.length} pages)`;
                
                downloadLinks.appendChild(link);
            } else {
                // For single page, create a simple download
                const blob = new Blob([pdfBytes], { type: 'application/pdf' });
                const url = URL.createObjectURL(blob);
                
                const link = document.createElement('a');
                link.href = url;
                link.download = `${pdfName}_page_${pages[0]}_enhanced.pdf`;
                link.className = 'btn';
                link.textContent = `Download Enhanced Page ${pages[0]}`;
                
                downloadLinks.appendChild(link);
            }
        }
        
        function downloadAsZip() {
            // In a real implementation, you would use a library like JSZip
            // to create a ZIP file containing all the split PDFs
            alert('ZIP download functionality would be implemented with a library like JSZip in a production environment.');
        }
        
        function resetApp() {
            pdfDoc = null;
            selectedPages.clear();
            totalPages = 0;
            pdfName = '';
            
            fileInput.value = '';
            fileInfo.classList.add('hidden');
            resetBtn.classList.add('hidden');
            qualityCard.classList.add('hidden');
            selectionCard.classList.add('hidden');
            downloadCard.classList.add('hidden');
            previewContainer.classList.add('hidden');
            
            progress.style.width = '0%';
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
    </script>
</body>
</html>
